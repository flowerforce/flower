{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@flowerforce/devtool": ["packages/flower-devtool/src/index.ts"],
      "@flowerforce/flower-core": ["packages/flower-core/src/index.ts"],
      "@flowerforce/flower-form": ["packages/flower-form/src/index.ts"],
      "@flowerforce/flower-react": ["packages/flower-react/src/index.ts"],
      "@flowerforce/flower-react-store": ["packages/flower-react-store/src/index.ts"],
      "@flowerforce/flower-react-context": ["packages/flower-react-context/src/index.ts"],
      "@flowerforce/flower-react-shared": ["packages/flower-react-shared/src/index.ts"],

    }
  },
  "exclude": ["node_modules"]
}
